<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudSueldo3381809.MainPage">

    <StackLayout Padding="30">
        <Label Text="Horas Trabajadas:" />
        <Entry x:Name="entryHoras" Keyboard="Numeric" />

        <Label Text="Pago por Hora:" />
        <Entry x:Name="entryPago" Keyboard="Numeric" />

        <Button Text="Calcular Sueldo" Clicked="Button_Clicked" />

        <Label x:Name="labelSueldo" Text="Sueldo Semanal: $" />
    </StackLayout>

</ContentPage>
